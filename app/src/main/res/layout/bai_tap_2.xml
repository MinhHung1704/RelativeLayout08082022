<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view4"
        android:gravity="center"
        android:layout_marginRight="13dp"
        android:layout_centerInParent="true"
        android:background="#96166d"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_above="@id/text_view4"
        android:layout_toStartOf="@id/text_view4"
        android:gravity="center"
        android:id="@+id/text_view3"
        android:background="#A88E04"
        android:textColor="#000000"
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:text="2"
        android:layout_above="@id/text_view3"
        android:layout_toStartOf="@id/text_view3"
        android:gravity="center"
        android:id="@+id/text_view2"
        android:background="#039A42"
        android:textColor="#000000"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_above="@id/text_view2"
        android:layout_toStartOf="@id/text_view2"
        android:gravity="center"
        android:id="@+id/text_view1"
        android:background="#fe2200"
        android:textColor="#000000"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_below="@id/text_view4"
        android:layout_toStartOf="@id/text_view4"
        android:gravity="center"
        android:id="@+id/text_view5"
        android:background="#8e635b"
        android:textColor="#000000"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_below="@id/text_view5"
        android:layout_toStartOf="@id/text_view5"
        android:gravity="center"
        android:id="@+id/text_view6"
        android:background="#946a30"
        android:textColor="#000000"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_below="@id/text_view6"
        android:layout_toStartOf="@id/text_view6"
        android:gravity="center"
        android:id="@+id/text_view7"
        android:background="#46daae"
        android:textColor="#000000"
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

</RelativeLayout>