<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textSize="30dp"
        android:id="@+id/text_view_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DD2121"
        android:text="Red"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/text_view_green"
        android:layout_below="@id/text_view_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#64DD17"
        android:textSize="30dp"
        android:text="Green"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/text_view_blue"
        android:layout_below="@id/text_view_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2962FF"
        android:textSize="30dp"
        android:text="Blue"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/text_view_orange"
        android:layout_below="@id/text_view_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFAB00"
        android:textSize="30dp"
        android:text="Orange"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/text_view_gray"
        android:layout_below="@id/text_view_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B0B5B6"
        android:textSize="30dp"
        android:text="Gray"
        android:textColor="#FFFF"/>

    <TextView
        android:layout_below="@id/text_view_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E43E94"
        android:textSize="30dp"
        android:text="Pink"
        android:textColor="#FFFF"/>

</RelativeLayout>